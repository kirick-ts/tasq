{
	"name": "@kirick/tasq",
	"version": "0.1.0-beta.102",
	"description": "Schedule tasks for your microservices easily.",
	"publishConfig": {
		"access": "public",
		"tag": "beta"
	},
	"type": "module",
	"main": "src/main.js",
	"exports": {
		".": {
			"import": "./src/main.js",
			"require": "./dist/tasq.cjs"
		}
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"dependencies": {
		"cbor-x": "1.5.3"
	},
	"peerDependencies": {
		"redis": "^4.1"
	},
	"devDependencies": {
		"@babel/core": "7.22.1",
		"@babel/eslint-parser": "7.21.8",
		"eslint": "8.41.0",
		"eslint-config-xo": "0.43.1",
		"eslint-plugin-import": "2.27.5",
		"eslint-plugin-jsdoc": "46.5.0",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-unicorn": "47.0.0",
		"jest": "^29.7.0"
	},
	"scripts": {
		"test": "bun run redis-up && npm run test-node && bun test",
		"test-node": "NODE_OPTIONS=--experimental-vm-modules jest --forceExit",
		"coverage": "bun run redis-up && bun test --coverage",
		"build": "bun run build-cjs",
		"build-cjs": "bunx esbuild --bundle --platform=node --format=cjs --packages=external --outfile=dist/tasq.cjs src/main.js",
		"npm-publish": "bun run build && bun run eslint . && bun run test && npm publish --tag beta; bun run redis-down",
		"redis-up": "docker ps | grep test-redis-tasq >/dev/null || docker run --rm -d -p 29361:6379 --name test-redis-tasq redis:7-alpine",
		"redis-down": "docker stop test-redis-tasq"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kirick13/tasq.git"
	},
	"keywords": [
		"tasq"
	],
	"author": "Daniil Kirichenko (https://twitter.com/kirickme)",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/kirick13/tasq/issues"
	},
	"homepage": "https://github.com/kirick13/tasq#readme"
}
